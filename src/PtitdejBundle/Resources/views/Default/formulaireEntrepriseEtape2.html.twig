{% extends "@Ptitdej/Default/layoutForm.html.twig" %}

{% block formulaire %}

    <fieldset class="entreprise">
        <legend>Renseignements sur votre événement</legend>
        <hr>

        {{ form_start(formEven) }}

        {{ form_label(formEven.date,'La date de votre ptit dej') }}
        {{ form_widget(formEven.date) }}
        {{ form_errors(formEven.date) }}

        {{ form_label(formEven.lieu,'Adresse de votre ptit dej', {'label_attr': {'class': 'label col-md-6' }}) }}
        {{ form_widget(formEven.lieu, {'attr': {'class': 'col-md-6' }}) }}
        {{ form_errors(formEven.lieu) }}

        {{ form_label(formEven.nbPersonne,'Le nombre de personne prévu', {'label_attr': {'class': 'label col-md-6'}}) }}
        {{ form_widget(formEven.nbPersonne, {'attr': {'class': 'col-md-4' }}) }}
        {{ form_errors(formEven.nbPersonne) }}

        {{ form_label(formEven.budget,'Le budget aloué à votre ptit dej', {'label_attr': {'class': 'label'}}) }}
        {{ form_widget(formEven.budget, {'attr': {'class': 'col-md-6' }}) }}
        {{ form_errors(formEven.budget) }}

        {{ form_label(formEven.type,'Que souhaitez-vous comme type de petit dej ?', {'label_attr': {'class': 'label'}}) }}
        {{ form_widget(formEven.type) }}
        {{ form_errors(formEven.type) }}


        {{ form_widget(formEven.save, { 'label': 'Enregistrer ma demande' }) }}
        {{ form_end(formEven) }}



    </fieldset>

{% endblock %}