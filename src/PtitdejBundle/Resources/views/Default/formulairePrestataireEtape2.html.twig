{% extends "@Ptitdej/Default/layoutForm.html.twig" %}

{% block formulaire %}

    <fieldset class="entreprise">
        <legend>Quelles sont les offres que vous proposez ? </legend>
        <hr>
        <fieldset>
            <legend>offre n°1 :</legend>
            {{ form_start(formOffre) }}


            {{ form_label(formOffre.nom, 'Nom de l\'offre' ) }}
            {{ form_widget(formOffre.nom) }}
            {{ form_errors(formOffre.nom) }}

            {{ form_label(formOffre.prix, 'Prix par personne' ) }}
            {{ form_widget(formOffre.prix) }}
            {{ form_errors(formOffre.prix) }}

            {{ form_label(formOffre.detail, 'Quelques précisions sur l\'offre' ) }}
            {{ form_widget(formOffre.detail) }}
            {{ form_errors(formOffre.detail) }}

            {{ form_label(formOffre.photo, 'Une photo pour cette offre' ) }}
            {{ form_widget(formOffre.photo) }}
            {{ form_errors(formOffre.photo) }}
        </fieldset>


        {{ form_widget(formOffre.save, { 'label': 'Enregistrer' }) }}

        {{ form_end(formOffre) }}

    </fieldset>

{% endblock %}